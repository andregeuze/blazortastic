@page "/WeatherForecast"
@using Blazortastic.Data
@using GeneratorHelper
@inject ICrudService<WeatherForecast> Service

<PageTitle>WeatherForecast</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">WeatherForecast</MudText>
@if(WeatherForecastList == null)
{
    <MudProgressCircular Color = "Color.Default" Indeterminate = "true" />
}
else
{
    <MudTable Items="WeatherForecastList" Hover="true" Elevation="0">
        <HeaderContent>
            <MudTh>Date</MudTh>
            <MudTh>TemperatureC</MudTh>
            <MudTh>TemperatureF</MudTh>
            <MudTh>Summary</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Date">@context.Date</MudTd>
            <MudTd DataLabel="TemperatureC">@context.TemperatureC</MudTd>
            <MudTd DataLabel="TemperatureF">@context.TemperatureF</MudTd>
            <MudTd DataLabel="Summary">@context.Summary</MudTd>
        </RowTemplate>
    </MudTable>
}